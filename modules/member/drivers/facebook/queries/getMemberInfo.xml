<query id="getMemberInfo" action="select">
	<tables>
		<table name="member_facebook" />
		<table name="member_common" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="equal" column="member_common.member_srl" default="member_facebook.member_srl" />
		<condition operation="equal" column="member_facebook.user_id" var="user_id" notnull="notnull" pipe="and" />
	</conditions>
</query>
